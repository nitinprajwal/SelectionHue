{
  "manifest_version": 3,
  "name": "Custom Selection Color",
  "version": "1.0",
  "description": "Change the text selection color to a barely visible color.",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
